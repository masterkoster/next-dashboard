generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlserver"
}

model User {
  id               String   @id @default(uuid())
  email            String   @unique @db.NVarChar(255)
  name             String?  @db.NVarChar(255)
  // Stored as JSON text because SQL Server lacks native array/JSON columns. Parse in app to get string[].
  purchasedModules String   @default("[]") @db.NVarChar(max)
  credits          Int      @default(0) @db.Int
  createdAt        DateTime @default(now()) @db.DateTime2
  updatedAt        DateTime @updatedAt @db.DateTime2
}
